#!/usr/bin/env ruby
# -*- mode: ruby -*-

# Requires
begin
  require 'rails-maker'
rescue LoadError
  $:.unshift(File.dirname(__FILE__) + '/../lib') unless $:.include?(File.dirname(__FILE__) + '/../lib')
  require 'rubygems'
  require 'rails-maker'
end

# Setup Constants
RailsMaker::GEM_ROOT = File.expand_path( File.dirname( __FILE__ ) + '/../' )

# Run
RailsMaker::CLI.start


=begin

require 'rubygems'
require File.expand_path(File.dirname(__FILE__) + "/../lib/my_fun_apps")
require "hello_world/cli"

HelloWorld::CLI.execute(STDOUT, ARGV)
	
=end

